<h2>Passenger Details</h2>
<p>Please enter passenger details for flight:</p>

<table>
  <thead>
    <tr>
        <th>Flight number</th>
        <th>Departure airport</th>
        <th>Arrival airport</th>
        <th>Departure date</th>
        <th>Departure time</th>
    </tr>
  </thead> 
  
  <tbody>
    <tr>
      <th><%= @flight.id %></th>
      <th><%= @flight.departure_airport.airport_code %></th>
      <th><%= @flight.arrival_airport.airport_code %></th>
      <th><%= @flight.departure_time.strftime('%m/%d/%Y') %></th>
      <th><%= @flight.departure_time.strftime('%H:%M') %></th>
    </tr>
  </tbody> 
    
</table>

<%= form_for @booking do |f| %>
  <% number = 1 %>
  
  <%= f.fields_for :passengers do |b| %>
    <p>Passenger <%= number %></p>
    <% number += 1 %>
    
    <%= b.label :name %>
    <%= b.text_field :name %>
    
    <%= b.label :email %>
    <%= b.email_field :email %>
    
  <% end %>  
    
    <%= hidden_field_tag(:passengers, params[:passengers]) %>
    <%= f.hidden_field :flight_id, value: params[:flight_id] %>
    <%= hidden_field_tag(:flight_id, params[:flight_id]) %>
    <%= f.submit "Submit booking" %> 
  
<% end %>  
